

doctype html
html(lang="en")
    head
        include partials/header

    body.login
        .contenedor-formulario
            h1 Iniciar Sesión en UpTask

            if error
                p.alerta.error= error

            form#formulario.caja.caja-login(method="POST" action="/iniciar-sesion" )
                .campo
                    label(for="email") E-mail:
                    input(type="email" name="email" placeholder="Escribe tu email" value= email )
                .campo
                    label(for="password") Password:
                    input(type="password" name="password" placeholder="Escribe tu contraseña" value= password )
                .campo.enviar
                    input.boton(type="submit" value="Iniciar Sesión")
                .campo.acciones
                    a(href="/crear-cuenta") << ¿Aun no tienes una cuenta?, crea una gratis!
                    a(href="/reestablecer") << ¿Olvidaste tu contraseña?
